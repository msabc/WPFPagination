<Window x:Class="WpfApp2.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Filter" Height="300" Width="300" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        >
    <Border Padding="10" BorderBrush="Black">
        <StackPanel Margin="10">
            <Label x:Name="lblUnos" Margin="10" FontSize="13"></Label>
            <TextBox x:Name="txtUnos">

            </TextBox>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10">
                <Button Content="OK" Click="Button_Click" IsDefault="True"></Button>
                <Button Content="Cancel" IsCancel="True"></Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
